        "target": "ES2020",
        "module": "commonjs",
        "moduleResolution": "node",
        "allowJs": true,
        "checkJs": false,
        "noEmit": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "baseUrl": "."
    },
    "include": [
        "**/*.js"
    ],
    "exclude": [
        "node_modules",
        "tests"
    ]
}